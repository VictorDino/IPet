<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/peluName"
        android:layout_width="400dp"
        android:layout_height="42dp"
        android:layout_marginTop="16dp"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="hola que tal mme llamo Juan" />

    <TextView
        android:id="@+id/peluDirection"
        android:layout_width="400dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/peluName"
        tools:text="hola que tal mme llamo Juan" />

    <TextView
        android:id="@+id/peluPhone"
        android:layout_width="400dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/peluDirection"
        tools:text="hola que tal mme llamo Juan" />

</androidx.constraintlayout.widget.ConstraintLayout>